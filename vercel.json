{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "rm -rf node_modules .next && npm ci && npm run build",
        "outputDirectory": "dist",
        "installCommand": "npm ci"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/[^.]+", "dest": "/", "status": 200 }
  ],
  "cleanUrls": true,
  "github": {
    "enabled": true,
    "silent": false
  },
  "public": true
} 