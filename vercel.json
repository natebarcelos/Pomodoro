{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm ci && npm run build",
        "outputDirectory": "dist",
        "installCommand": "npm ci"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/[^.]+", "dest": "/", "status": 200 }
  ],
  "cleanUrls": true
} 